<div class="formm">
  <%= form_for @food do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: " form-label" %> <%= f.text_field :name, class: "edit" , placeholder: "food name" %>
  </div>
  <div class="mb-3">
    <%= f.label :measurement, class: "form-label" %> <%= f.text_field :measurement, class: "edit" , placeholder: "measurement" %>
  </div>
    <div class="mb-3">
    <%= f.label :price, class: " form-label" %> <%= f.text_field :price, class: "edit" , placeholder: "price" %>
  </div>
    <div class="mb-3">
    <%= f.label :quantity, class: " form-label" %> <%= f.text_field :quantity, class: "edit" , placeholder: "quantity" %>
  </div>
  
  <p><%= f.submit "Add food", class: "btn btn-primary" %> <% end %></p>
</div>