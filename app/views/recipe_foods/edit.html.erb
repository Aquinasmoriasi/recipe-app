<div>
  <%= form_for @recipe_food_edit, url: recipe_recipe_food_url do |f| %>
  <div class="d-flex flex-column mb-2">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "col-4 p-1  border rounded" %>
  </div>
   <div class="d-flex flex-column mb-2">
    <%= f.label :foods %>
    <%= select_tag "food",options_for_select(@foods.map { |food| [food.name, food.id] }), class: "col-4 p-1  border rounded" %>
   </div>
   <%= f.submit "Save", class: "btn btn-primary" %> 
  <% end %>
</div>