<div>
  <%= form_for @recipe do |f| %>
  <div class="d-flex flex-column mb-2">
    <%= f.label "Recipe" %> 
    <%= f.text_field :name, class: "col-6 p-1 border rounded" %>
  </div>
  <div class="d-flex flex-column mb-2">
    <%= f.label :preparation_time %>
    <%= f.number_field :preparation_time, class: "col-6 p-1  border rounded" %>
  </div>
    <div class="d-flex flex-column mb-2">
    <%= f.label :cooking_time %>
    <%= f.number_field :cooking_time, class: "col-6 p-1  border rounded" %>
  </div>
    <div class="d-flex flex-column mb-2">
    <%= f.label :description %>
    <%= f.text_area :description, class: "col-6  border" %>
  </div>

  <%= f.submit "Add Recipe", class: "btn btn-primary" %> <% end %>
</div>